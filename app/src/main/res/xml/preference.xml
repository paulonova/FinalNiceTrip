<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="@string/preference">
        <CheckBoxPreference
            android:key="mode_trip"
            android:summary="@string/mode_trip_summary"
            android:title="@string/trip_mode"/>

        <PreferenceScreen
            android:key="default_mode"
            android:summary="@string/default_mode_summary"
            android:title="@string/set_login_page"/>

        <EditTextPreference
            android:dialogTitle="@string/set_value_limit"
            android:key="value_limit"
            android:defaultValue="80"
            android:summary="@string/value_limit_summary"
            android:title="@string/value_limit"/>

    </PreferenceCategory>

</PreferenceScreen>